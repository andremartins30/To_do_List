<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
           <a href="/" class="title">{{this.title}}</a>
           <div class="actions">
                <a href="/"><i class="bi bi-check2"></i></a>
                <a href="/tasks/edit/{{this._id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/tasks/remove/{{this._id}}" method="POST">
                    <input type="hidden" name="id" value="{{this._id}}">
                        <button type="submit">
                            <i class="bi bi-x-lg"></i>
                        </button>
                </form>
           </div>
        </li>
    {{/each}}    
</ul>